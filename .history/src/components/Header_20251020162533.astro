---
import type { Language } from '../types/domain';
import siteConfig from '../config/site.json';
import LanguageSwitcher from './LanguageSwitcher.astro';

interface Props {
  locale: Language;
}

const { locale } = Astro.props;

// 导入翻译
const translations = await import(`../locales/${locale}/common.json`);
const t = translations.default;

// 获取当前路径
const currentPath = Astro.url.pathname;
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo 和网站名称 -->
      <div class="flex items-center">
        <a href={locale === 'zh' ? '/' : '/en'} class="flex items-center space-x-2">
          <svg class="w-8 h-8 text-primary" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5zm0 18c-3.86-.96-7-5.05-7-9V8.3l7-3.5 7 3.5V11c0 3.95-3.14 8.04-7 9z"/>
            <path d="M12 6L7 8.5v3.75c0 2.77 1.92 5.37 5 6 3.08-.63 5-3.23 5-6V8.5L12 6z"/>
          </svg>
          <span class="text-xl font-bold text-gray-900">{siteConfig.siteName}</span>
        </a>
      </div>

      <!-- 导航菜单 -->
      <nav class="hidden md:flex items-center space-x-8">
        <a href={locale === 'zh' ? '/' : '/en'} class="text-gray-700 hover:text-primary transition-colors">
          {t.nav.home}
        </a>
        <a href={locale === 'zh' ? '/about' : '/en/about'} class="text-gray-700 hover:text-primary transition-colors">
          {t.nav.about}
        </a>
      </nav>

      <!-- 右侧：电话和语言切换 -->
      <div class="flex items-center space-x-4">
        <!-- 电话号码 -->
        <a 
          href={`tel:${siteConfig.contact.phone}`}
          class="hidden sm:flex items-center space-x-2 text-primary hover:text-primary-dark transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          <span class="font-medium">{siteConfig.contact.phone}</span>
        </a>

        <!-- 语言切换器 -->
        <LanguageSwitcher locale={locale} currentPath={currentPath} />

        <!-- CTA 按钮 -->
        <a 
          href={locale === 'zh' ? '/contact' : '/en/contact'}
          class="hidden lg:inline-flex items-center px-4 py-2 bg-primary text-white rounded-lg hover:bg-primary-dark transition-colors font-medium"
        >
          {t.cta.contact}
        </a>
      </div>
    </div>
  </div>
</header>
