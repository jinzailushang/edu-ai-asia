---
import type { Language } from '../types/domain';
import siteConfig from '../config/site.json';

interface Props {
  locale: Language;
}

const { locale } = Astro.props;
const translations = await import(`../locales/${locale}/common.json`);
const t = translations.default;

const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-900 text-gray-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- 品牌信息 -->
      <div class="col-span-1 md:col-span-2">
        <div class="flex items-center space-x-2 mb-4">
          <svg class="w-8 h-8 text-primary" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5zm0 18c-3.86-.96-7-5.05-7-9V8.3l7-3.5 7 3.5V11c0 3.95-3.14 8.04-7 9z"/>
            <path d="M12 6L7 8.5v3.75c0 2.77 1.92 5.37 5 6 3.08-.63 5-3.23 5-6V8.5L12 6z"/>
          </svg>
          <span class="text-xl font-bold text-white">{siteConfig.siteName}</span>
        </div>
        <p class="text-gray-400 mb-4">
          {locale === 'zh' 
            ? '专业的 AI 域名销售平台，提供优质域名助力您的品牌发展。'
            : 'Professional AI domain marketplace offering premium domains for your brand.'}
        </p>
      </div>

      <!-- 快速链接 -->
      <div>
        <h3 class="text-white font-semibold mb-4">
          {locale === 'zh' ? '快速链接' : 'Quick Links'}
        </h3>
        <ul class="space-y-2">
          <li>
            <a href={locale === 'zh' ? '/' : '/en'} class="hover:text-primary transition-colors">
              {t.nav.home}
            </a>
          </li>
          <li>
            <a href={locale === 'zh' ? '/about' : '/en/about'} class="hover:text-primary transition-colors">
              {t.nav.about}
            </a>
          </li>
        </ul>
      </div>

      <!-- 联系方式 -->
      <div>
        <h3 class="text-white font-semibold mb-4">
          {locale === 'zh' ? '联系我们' : 'Contact Us'}
        </h3>
        <ul class="space-y-2">
          <li class="flex items-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <a href={`tel:${siteConfig.contact.phone}`} class="hover:text-primary transition-colors">
              {siteConfig.contact.phone}
            </a>
          </li>
          <li class="flex items-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <a href={`mailto:${siteConfig.contact.email}`} class="hover:text-primary transition-colors">
              {siteConfig.contact.email}
            </a>
          </li>
          {siteConfig.contact.wechat && (
            <li class="flex items-center space-x-2">
              <span>{t.contact.wechat}:</span>
              <span>{siteConfig.contact.wechat}</span>
            </li>
          )}
        </ul>
      </div>
    </div>

    <!-- 底部版权 -->
    <div class="border-t border-gray-800 mt-8 pt-8 flex flex-col md:flex-row justify-between items-center">
      <p class="text-gray-400 text-sm">
        © {currentYear} {siteConfig.siteName}. {locale === 'zh' ? '保留所有权利。' : 'All rights reserved.'}
      </p>
      <div class="flex space-x-6 mt-4 md:mt-0">
        <a href={locale === 'zh' ? '/privacy' : '/en/privacy'} class="text-gray-400 hover:text-primary text-sm transition-colors">
          {locale === 'zh' ? '隐私政策' : 'Privacy Policy'}
        </a>
        <a href={locale === 'zh' ? '/terms' : '/en/terms'} class="text-gray-400 hover:text-primary text-sm transition-colors">
          {locale === 'zh' ? '服务条款' : 'Terms of Service'}
        </a>
      </div>
    </div>
  </div>
</footer>
