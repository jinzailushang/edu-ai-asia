---
import BaseLayout from '../../layouts/BaseLayout.astro';
import DomainDetail from '../../components/DomainDetail.astro';
import type { Domain } from '../../types/domain';
import domainsData from '../../data/domains.json';
import siteConfig from '../../config/site.json';

export async function getStaticPaths() {
  const domains = domainsData as Domain[];
  return domains.map((domain) => ({
    params: { slug: domain.id },
    props: { domain },
  }));
}

const { domain } = Astro.props as { domain: Domain };
const locale = 'zh';
const content = domain.content[locale];

// SEO 元数据
const title = `${domain.name} - ${content.tagline} | ${siteConfig.siteName}`;
const description = content.description;
const keywords = [
  domain.name,
  `${domain.name}域名`,
  `${domain.name}出售`,
  domain.category,
  ...domain.tags,
  'AI域名',
  '优质域名'
];
---

<BaseLayout 
  title={title} 
  description={description}
  locale={locale}
  keywords={keywords}
  type="product"
>
  <article class="py-12 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- 面包屑导航 -->
      <nav class="mb-8" aria-label="面包屑导航">
        <ol class="flex items-center space-x-2 text-sm" itemscope itemtype="https://schema.org/BreadcrumbList">
          <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
            <a href="/" class="text-gray-500 hover:text-primary transition-colors" itemprop="item">
              <span itemprop="name">首页</span>
            </a>
            <meta itemprop="position" content="1" />
          </li>
          <li aria-hidden="true">
            <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
            </svg>
          </li>
          <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
            <span class="text-gray-900 font-medium" itemprop="name" aria-current="page">
              {domain.name}
            </span>
            <meta itemprop="position" content="2" />
          </li>
        </ol>
      </nav>
      
      <DomainDetail domain={domain} locale={locale} />
    </div>
  </article>
  
  <!-- 联系 CTA -->
  <section class="py-16 bg-white" aria-labelledby="contact-cta-heading">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-gradient-to-r from-primary to-gradient-end rounded-2xl p-8 sm:p-12 text-center">
        <h2 id="contact-cta-heading" class="text-3xl font-bold text-white mb-4">
          对这个域名感兴趣？
        </h2>
        <p class="text-xl text-blue-100 mb-8">
          立即联系我们，获取详细报价和购买流程
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a 
            href={`tel:${siteConfig.contact.phone}`}
            class="inline-flex items-center px-8 py-4 bg-white text-primary text-lg font-semibold rounded-lg hover:shadow-lg hover:scale-105 transition-all duration-300"
          >
            立即咨询
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
          </a>
          <a 
            href={`tel:${siteConfig.contact.phone}`}
            class="inline-flex items-center px-8 py-4 bg-transparent text-white text-lg font-semibold rounded-lg border-2 border-white hover:bg-white hover:text-primary transition-all duration-300"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            {siteConfig.contact.phone}
          </a>
        </div>
        
        <!-- 联系方式 -->
        <div class="mt-8 pt-8 border-t border-white/20">
          <div class="flex flex-wrap justify-center gap-6 text-white">
            <a href={`mailto:${siteConfig.contact.email}`} class="flex items-center hover:text-blue-100 transition-colors">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              {siteConfig.contact.email}
            </a>
            {siteConfig.contact.wechat && (
              <div class="flex items-center">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M8.691 2.188C3.891 2.188 0 5.476 0 9.53c0 2.212 1.17 4.203 3.002 5.55a.59.59 0 01.213.665l-.39 1.48c-.019.07-.048.141-.048.213 0 .163.13.295.29.295a.326.326 0 00.167-.054l1.903-1.114a.864.864 0 01.717-.098 10.16 10.16 0 002.837.403c.276 0 .543-.027.811-.05-.857-2.578.157-4.972 1.932-6.446 1.703-1.415 3.882-1.98 5.853-1.838-.576-3.583-4.196-6.348-8.596-6.348zM5.785 5.991c.642 0 1.162.529 1.162 1.18a1.17 1.17 0 01-1.162 1.178A1.17 1.17 0 014.623 7.17c0-.651.52-1.18 1.162-1.18zm5.813 0c.642 0 1.162.529 1.162 1.18a1.17 1.17 0 01-1.162 1.178 1.17 1.17 0 01-1.162-1.178c0-.651.52-1.18 1.162-1.18zm5.34 2.867c-1.797-.052-3.746.512-5.28 1.786-1.72 1.428-2.687 3.72-1.78 6.22.942 2.453 3.666 4.229 6.884 4.229.826 0 1.622-.12 2.361-.336a.722.722 0 01.598.082l1.584.926a.272.272 0 00.14.047c.134 0 .24-.111.24-.247 0-.06-.023-.12-.038-.177l-.327-1.233a.582.582 0 01.265-.694c1.584-1.168 2.545-2.874 2.545-4.716 0-3.57-3.395-6.297-7.192-6.887zM14.46 9.37c.642 0 1.162.529 1.162 1.18a1.17 1.17 0 01-1.162 1.178 1.17 1.17 0 01-1.162-1.178c0-.651.52-1.18 1.162-1.18zm4.63 0c.642 0 1.161.529 1.161 1.18a1.17 1.17 0 01-1.161 1.178 1.17 1.17 0 01-1.162-1.178c0-.651.52-1.18 1.162-1.18z"/>
                </svg>
                微信: {siteConfig.contact.wechat}
              </div>
            )}
            {siteConfig.contact.whatsapp && (
              <a href={`https://wa.me/${siteConfig.contact.whatsapp.replace(/[^0-9]/g, '')}`} class="flex items-center hover:text-blue-100 transition-colors" target="_blank" rel="noopener noreferrer">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                </svg>
                WhatsApp
              </a>
            )}
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<!-- Schema.org 结构化数据 - Product -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "Product",
  "name": domain.name,
  "description": content.fullDescription || content.description,
  "category": domain.category,
  "sku": domain.id,
  "image": new URL('/og-image.jpg', siteConfig.siteUrl).toString(),
  "url": new URL(`/domains/${domain.id}`, siteConfig.siteUrl).toString(),
  "offers": {
    "@type": "Offer",
    "availability": domain.status === 'available' ? "https://schema.org/InStock" : "https://schema.org/OutOfStock",
    "price": domain.priceRange || "面议",
    "priceCurrency": "USD",
    "seller": {
      "@type": "Organization",
      "name": siteConfig.siteName,
      "url": siteConfig.siteUrl
    },
    "priceValidUntil": domain.expirationDate || new Date(new Date().setFullYear(new Date().getFullYear() + 1)).toISOString().split('T')[0]
  },
  "brand": {
    "@type": "Brand",
    "name": siteConfig.siteName
  },
  "aggregateRating": domain.featured ? {
    "@type": "AggregateRating",
    "ratingValue": "5",
    "reviewCount": "1"
  } : undefined
})} />

<!-- Schema.org 结构化数据 - BreadcrumbList -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "首页",
      "item": siteConfig.siteUrl
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": domain.name,
      "item": new URL(`/domains/${domain.id}`, siteConfig.siteUrl).toString()
    }
  ]
})} />
