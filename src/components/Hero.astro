---
import type { Language } from '../types/domain';
import siteConfig from '../config/site.json';

interface Props {
  locale: Language;
}

const { locale } = Astro.props;
const translations = await import(`../locales/${locale}/common.json`);
const t = translations.default;
---

<section class="relative bg-gradient-to-br from-blue-50 via-white to-blue-50 overflow-hidden">
  <!-- 背景装饰 -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-gradient-to-br from-primary/20 to-gradient-end/20 rounded-full blur-3xl"></div>
    <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-gradient-to-tr from-gradient-start/20 to-primary/20 rounded-full blur-3xl"></div>
  </div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-20 lg:py-28">
    <div class="text-center">
      <!-- 主标题 -->
      <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-4 sm:mb-6 px-2">
        <span class="block">{t.hero.title.split(' - ')[0]}</span>
        <span class="block bg-gradient-to-r from-gradient-start to-gradient-end bg-clip-text text-transparent mt-2">
          {t.hero.title.split(' - ')[1] || t.hero.title.split('-')[1]}
        </span>
      </h1>
      
      <!-- 副标题 -->
      <p class="text-lg sm:text-xl lg:text-2xl text-gray-600 mb-6 sm:mb-8 max-w-3xl mx-auto px-2">
        {t.hero.subtitle}
      </p>
      
      <!-- CTA 按钮组 -->
      <div class="flex flex-col sm:flex-row items-stretch sm:items-center justify-center gap-3 sm:gap-4 mb-10 sm:mb-12 px-2">
        <a 
          href={`tel:${siteConfig.contact.phoneTel}`}
          class="hero-cta-primary touch-target inline-flex items-center justify-center px-6 sm:px-8 py-3 sm:py-4 bg-gradient-to-r from-gradient-start to-gradient-end text-white text-base sm:text-lg font-semibold rounded-lg hover:shadow-lg hover:scale-105 transition-all duration-300 active:scale-95"
          data-cta-text={locale === 'zh' ? '立即咨询' : 'Call Now'}
          aria-label={locale === 'zh' ? '立即咨询' : 'Call Now'}
        >
          {locale === 'zh' ? '立即咨询' : 'Call Now'}
          <svg class="w-5 h-5 ml-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
        </a>
        
        <a 
          href={`tel:${siteConfig.contact.phoneTel}`}
          class="hero-phone-secondary touch-target inline-flex items-center justify-center px-6 sm:px-8 py-3 sm:py-4 bg-white text-primary text-base sm:text-lg font-semibold rounded-lg border-2 border-primary hover:bg-primary hover:text-white transition-all duration-300 active:scale-95"
          data-phone={siteConfig.contact.phoneInternational}
          aria-label={`${locale === 'zh' ? '拨打电话' : 'Call'} ${siteConfig.contact.phoneInternational}`}
        >
          <svg class="w-5 h-5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          <span class="truncate">{siteConfig.contact.phoneInternational}</span>
        </a>
      </div>
      
      <!-- 信任指标 -->
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 sm:gap-8 max-w-4xl mx-auto">
        <div class="flex flex-col items-center p-4">
          <div class="w-14 h-14 sm:w-16 sm:h-16 bg-gradient-to-br from-primary to-gradient-end rounded-full flex items-center justify-center mb-3 flex-shrink-0">
            <svg class="w-7 h-7 sm:w-8 sm:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
          </div>
          <h3 class="text-base sm:text-lg font-semibold text-gray-900 mb-1 text-center">
            {locale === 'zh' ? '安全交易' : 'Secure Transaction'}
          </h3>
          <p class="text-gray-600 text-sm text-center">
            {locale === 'zh' ? '第三方托管保障' : 'Third-party Escrow'}
          </p>
        </div>
        
        <div class="flex flex-col items-center p-4">
          <div class="w-14 h-14 sm:w-16 sm:h-16 bg-gradient-to-br from-primary to-gradient-end rounded-full flex items-center justify-center mb-3 flex-shrink-0">
            <svg class="w-7 h-7 sm:w-8 sm:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="text-base sm:text-lg font-semibold text-gray-900 mb-1 text-center">
            {locale === 'zh' ? '快速响应' : 'Quick Response'}
          </h3>
          <p class="text-gray-600 text-sm text-center">
            {locale === 'zh' ? '24小时内回复' : 'Reply within 24h'}
          </p>
        </div>
        
        <div class="flex flex-col items-center p-4">
          <div class="w-14 h-14 sm:w-16 sm:h-16 bg-gradient-to-br from-primary to-gradient-end rounded-full flex items-center justify-center mb-3 flex-shrink-0">
            <svg class="w-7 h-7 sm:w-8 sm:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
            </svg>
          </div>
          <h3 class="text-base sm:text-lg font-semibold text-gray-900 mb-1 text-center">
            {locale === 'zh' ? '优质域名' : 'Premium Domains'}
          </h3>
          <p class="text-gray-600 text-sm text-center">
            {locale === 'zh' ? '精选 AI 行业域名' : 'Curated AI Domains'}
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { analytics } from '../utils/analytics';

  document.addEventListener('DOMContentLoaded', () => {
    // Track primary CTA click
    const primaryCTA = document.querySelector('.hero-cta-primary');
    if (primaryCTA) {
      primaryCTA.addEventListener('click', () => {
        const ctaText = primaryCTA.getAttribute('data-cta-text') || '';
        analytics.trackCTAClick(ctaText, 'Hero');
        analytics.trackPhoneClick('', 'Hero Primary CTA');
      });
    }

    // Track secondary phone click
    const secondaryPhone = document.querySelector('.hero-phone-secondary');
    if (secondaryPhone) {
      secondaryPhone.addEventListener('click', () => {
        const phone = secondaryPhone.getAttribute('data-phone') || '';
        analytics.trackPhoneClick(phone, 'Hero Secondary');
      });
    }
  });
</script>
