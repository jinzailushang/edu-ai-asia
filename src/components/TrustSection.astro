---
import type { Language } from '../types/domain';

interface Props {
  locale: Language;
}

const { locale } = Astro.props;

const features = locale === 'zh' ? [
  {
    icon: 'shield',
    title: '安全可靠',
    description: '使用第三方托管服务，确保交易安全，保护买卖双方权益'
  },
  {
    icon: 'lightning',
    title: '快速交付',
    description: '完成付款后，我们将在24小时内完成域名转移手续'
  },
  {
    icon: 'support',
    title: '专业服务',
    description: '提供全程咨询服务，协助您完成域名购买和配置'
  },
  {
    icon: 'certificate',
    title: '合法合规',
    description: '所有域名均为合法注册，提供完整的所有权证明'
  }
] : [
  {
    icon: 'shield',
    title: 'Secure & Reliable',
    description: 'Third-party escrow service ensures safe transactions and protects both parties'
  },
  {
    icon: 'lightning',
    title: 'Fast Delivery',
    description: 'Domain transfer completed within 24 hours after payment confirmation'
  },
  {
    icon: 'support',
    title: 'Professional Service',
    description: 'Full consultation service to assist with domain purchase and setup'
  },
  {
    icon: 'certificate',
    title: 'Legal Compliance',
    description: 'All domains legally registered with complete ownership documentation'
  }
];

const icons = {
  shield: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
  lightning: 'M13 10V3L4 14h7v7l9-11h-7z',
  support: 'M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z',
  certificate: 'M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z'
};
---

<section class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- 标题 -->
    <div class="text-center mb-12">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
        {locale === 'zh' ? '为什么选择我们' : 'Why Choose Us'}
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        {locale === 'zh' 
          ? '专业、安全、高效的域名交易服务，让您放心购买优质域名'
          : 'Professional, secure, and efficient domain transaction service for your peace of mind'}
      </p>
    </div>
    
    <!-- 特性网格 -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {features.map((feature) => (
        <div class="group relative p-6 bg-gray-50 rounded-xl hover:bg-white hover:shadow-lg transition-all duration-300">
          <!-- 图标 -->
          <div class="w-14 h-14 bg-gradient-to-br from-primary to-gradient-end rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icons[feature.icon]} />
            </svg>
          </div>
          
          <!-- 标题 -->
          <h3 class="text-xl font-semibold text-gray-900 mb-2">
            {feature.title}
          </h3>
          
          <!-- 描述 -->
          <p class="text-gray-600">
            {feature.description}
          </p>
          
          <!-- 悬停效果 -->
          <div class="absolute inset-0 rounded-xl border-2 border-transparent group-hover:border-primary/20 transition-colors pointer-events-none"></div>
        </div>
      ))}
    </div>
  </div>
</section>
