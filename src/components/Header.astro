---
import type { Language } from '../types/domain';
import siteConfig from '../config/site.json';
import LanguageSwitcher from './LanguageSwitcher.astro';

interface Props {
  locale: Language;
}

const { locale } = Astro.props;

// 导入翻译
const translations = await import(`../locales/${locale}/common.json`);
const t = translations.default;

// 获取当前路径
const currentPath = Astro.url.pathname;
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16 sm:h-20">
      <!-- Logo 和网站名称 -->
      <div class="flex items-center min-w-0 flex-1">
        <a href={locale === 'zh' ? '/' : '/en'} class="flex items-center space-x-2 touch-target">
          <svg class="w-7 h-7 sm:w-8 sm:h-8 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5zm0 18c-3.86-.96-7-5.05-7-9V8.3l7-3.5 7 3.5V11c0 3.95-3.14 8.04-7 9z"/>
            <path d="M12 6L7 8.5v3.75c0 2.77 1.92 5.37 5 6 3.08-.63 5-3.23 5-6V8.5L12 6z"/>
          </svg>
          <span class="text-lg sm:text-xl font-bold text-gray-900 truncate">{siteConfig.siteName}</span>
        </a>
      </div>

      <!-- 右侧：电话和语言切换 -->
      <div class="flex items-center space-x-2 sm:space-x-4">
        <!-- 电话号码 - 桌面版 -->
        <a 
          href={`tel:${siteConfig.contact.phoneTel}`}
          class="hidden md:flex items-center space-x-2 text-primary hover:text-primary-dark transition-colors header-phone-link touch-target px-3 py-2 rounded-lg hover:bg-blue-50"
          title={locale === 'zh' ? '拨打电话' : 'Call us'}
          data-phone={siteConfig.contact.phoneInternational}
          aria-label={locale === 'zh' ? '拨打电话' : 'Call us'}
        >
          <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          <span class="font-medium hidden lg:inline">{siteConfig.contact.phoneInternational}</span>
        </a>
        
        <!-- 电话号码 - 移动版（仅图标） -->
        <a 
          href={`tel:${siteConfig.contact.phoneTel}`}
          class="md:hidden flex items-center justify-center text-primary hover:text-primary-dark transition-colors header-phone-link-mobile touch-target w-11 h-11 rounded-lg hover:bg-blue-50"
          title={locale === 'zh' ? '拨打电话' : 'Call us'}
          data-phone={siteConfig.contact.phoneInternational}
          aria-label={locale === 'zh' ? '拨打电话' : 'Call us'}
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
        </a>

        <!-- 语言切换器 -->
        <LanguageSwitcher locale={locale} currentPath={currentPath} />

      </div>
    </div>
  </div>
</header>

<script>
  import { analytics } from '../utils/analytics';

  // Track phone clicks in header
  document.addEventListener('DOMContentLoaded', () => {
    // Desktop phone link
    const phoneLink = document.querySelector('.header-phone-link');
    if (phoneLink) {
      phoneLink.addEventListener('click', () => {
        const phone = phoneLink.getAttribute('data-phone') || '';
        analytics.trackPhoneClick(phone, 'Header Desktop');
      });
    }
    
    // Mobile phone link
    const phoneLinkMobile = document.querySelector('.header-phone-link-mobile');
    if (phoneLinkMobile) {
      phoneLinkMobile.addEventListener('click', () => {
        const phone = phoneLinkMobile.getAttribute('data-phone') || '';
        analytics.trackPhoneClick(phone, 'Header Mobile');
      });
    }
  });
</script>
