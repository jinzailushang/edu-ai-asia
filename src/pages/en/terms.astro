---
import BaseLayout from '../../layouts/BaseLayout.astro';

const pageTitle = 'Terms of Service';
const pageDescription = 'edu-ai.asia Terms of Service - Terms and conditions for using this website';
---

<BaseLayout 
  title={pageTitle}
  description={pageDescription}
  locale="en"
>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Breadcrumb -->
    <nav class="mb-8" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-2 text-sm">
        <li>
          <a href="/en" class="text-gray-500 hover:text-primary transition-colors">
            Home
          </a>
        </li>
        <li aria-hidden="true">
          <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
          </svg>
        </li>
        <li>
          <span class="text-gray-900 font-medium" aria-current="page">
            Terms of Service
          </span>
        </li>
      </ol>
    </nav>

